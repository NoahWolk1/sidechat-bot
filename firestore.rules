// Firestore security rules
// Copy these rules into your Firebase console's Firestore "Rules" section

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read AND write access to bot state and config
    // This enables anyone viewing the web interface to control the bot
    // This is acceptable for this specific app since it's a low-security requirement
    // and most operations will go through the serverless functions anyway
    match /bot/{document=**} {
      allow read, write: if true;
    }
    
    // Allow public read access to test documents
    match /test/{document=**} {
      allow read: if true;
      allow write: if true;  // Allow writing to test documents for diagnostic purposes
    }
    
    // Note: For more sensitive applications, use authentication:
    // allow read, write: if request.auth != null;
    
    // For a completely public instance (use with caution):
    // allow read, write: if true;
  }
}

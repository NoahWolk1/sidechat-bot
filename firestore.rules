// Firestore security rules
// Copy these rules into your Firebase console's Firestore "Rules" section

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to bot state and config
    // This enables anyone viewing the web interface to see the bot status
    match /bot/state {
      allow read: if true;
      allow write: if request.auth != null;  // Require authentication to change bot state
    }
    
    match /bot/config {
      allow read: if true;
      allow write: if request.auth != null;  // Require authentication to change bot configuration
    }
    
    // For production use, you may want to restrict access with authentication:
    // allow read, write: if request.auth != null;
    
    // For a completely public instance (use with caution):
    // allow read, write: if true;
  }
}
